@page
@model RegisterModel

@using BlaBlaCarAz.Localization
@using BlaBlaCarAz.Localization.Resources

@inject LocService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Register));
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.CreateNewAccount))</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Email))</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.PhoneNumber))</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.NameLastName))</label>
                <input asp-for="Input.NameLastName" class="form-control" />
                <span asp-validation-for="Input.NameLastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.BirthDate))</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="Input_BirthDate" name="Input.BirthDate" placeholder="dd.MM.yyyy">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Password))</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.ConfirmPassword))</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Register))</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.LoginHeader2))</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript">
        $('#Input_BirthDate').datepicker({
            format: 'dd.mm.yyyy',
            autoclose: true,
        });
    </script>

}
