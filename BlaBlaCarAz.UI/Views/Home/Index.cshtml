@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using BlaBlaCarAz.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<BlaBlaCarAz.Localization.Resources.SharedResource> _sharedLocalizer
@inject LocService SharedLocalizer
    
@{
    ViewData["Title"] = Localizer["Home Page"];
}
@model RideSearchViewModel
<div class="row" style="background-image: url(/images/carpool_blablabus_large.svg)">
    <div></div>
    <div class="text-center">
        <h1 class="display-4">@Localizer["Your ride. Your choice."]</h1>

    </div>
    <div class="row">
        <div class="col-md-12">
            <section>
                <form id="rideSearch" method="post" asp-controller="Home" asp-action="RideSearch">
                    <hr />

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                        </div><input asp-for="From" class="form-control" placeholder="@Localizer["Leaving from..."]" />
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                        </div><input asp-for="To" class="form-control" placeholder="@Localizer["Going to..."]" />
                        <div id="sandbox-container">
                            <div class="input-group date">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div><input type="text" id="SearchDate" class="form-control">
                            </div>
                        </div>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-truck-loading"></i></span>
                        </div>@Html.DropDownListFor(m => m.LoadType, Html.GetEnumSelectList<BlaBlaCarAz.BLL.DomainModel.Enums.LoadType>())
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-weight-hanging"></i></span>
                        </div><input asp-for="LoadLimits" class="form-control" />

                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" id="button-addon2" onclick="SetSearchDate()">@SharedLocalizer.GetLocalizedHtmlString("Search")</button>
                        </div>
                    </div>



                    @Html.HiddenFor(x => x.Date)
                </form>
            </section>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <link href="~/lib/jqueryui/jquery-ui.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript">

        $(function () {
            SetFieldAutocompletePlacesApi($('#From'));
            SetFieldAutocompletePlacesApi($('#To'));

            $('#sandbox-container .input-group.date').datepicker({
                format: "dd/mm/yyyy",
                autoclose: true
            }).datepicker("setDate", 'now');
        });

        function SetSearchDate() {
            var searchDate = $('#SearchDate').val()
            $('#Date').val(searchDate);
        }
    </script>
}
