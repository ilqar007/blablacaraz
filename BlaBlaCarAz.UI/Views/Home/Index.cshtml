@using BlaBlaCarAz.Localization
@using BlaBlaCarAz.Localization.Resources

@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.HomePage));
}
@model RideSearchViewModel
<div class="row" style="background-image: url(/images/carpool_blablabus_large.svg)">
    <div></div>
    <div class="text-center">
        <h1 class="display-4">@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.YourRide))</h1>

    </div>
    <div class="row">
        <div class="col-md-12">
            <section>
                <form id="rideSearch" method="post" asp-controller="Home" asp-action="RideSearch">
                    <hr />

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                        </div><input asp-for="From" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.From))" />
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                        </div><input asp-for="To" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.To))" />
                        <div id="sandbox-container">
                            <div class="input-group date">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div><input type="text" id="SearchDate" class="form-control">
                            </div>
                        </div>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-truck-loading"></i></span>
                        </div>
                        <select data-val="true" data-val-required="The LoadType field is required." id="LoadType" name="LoadType">
                            <option value="0">@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Document))</option>
                            <option value="1">@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Bag))</option>
                        </select>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class=""></i></span>
                        </div><input asp-for="LoadLimits" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Limits))" />

                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" id="button-addon2" onclick="SetSearchDate()">@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Search))</button>
                        </div>
                    </div>



                    @Html.HiddenFor(x => x.Date)
                </form>
            </section>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <link href="~/lib/jqueryui/jquery-ui.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript">

        $(function () {
            SetFieldAutocompletePlacesApi($('#From'));
            SetFieldAutocompletePlacesApi($('#To'));

            $('#sandbox-container .input-group.date').datepicker({
                format: "dd/mm/yyyy",
                autoclose: true
            }).datepicker("setDate", 'now');
        });

        function SetSearchDate() {
            var searchDate = $('#SearchDate').val()
            $('#Date').val(searchDate);
        }
    </script>
}
