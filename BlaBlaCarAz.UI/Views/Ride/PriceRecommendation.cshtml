@model BlaBlaCarAz.BLL.DomainModel.Entities.Ride

@{
    ViewData["Title"] = "PriceRecommendation";
}

<h1 class="text-center mt-4">This is our recommended price per seat. OK for you?</h1>


        <form asp-action="PriceSetting">
            <div class="row mb-4"></div>
                        <label class="form-control-lg col-6 offset-3">15 manat</label>
            <div class="form-control col-9 offset-3">
                <a onclick="SetApporavl(true)" href="#" class="">Yes, perfect</a>
            </div>
            <hr class="col-6 offset-3" />
            <div class="form-control col-9 offset-3">
                <a onclick="SetApporavl(false)" href="#">No, I need to edit this amount</a>
            </div>


            @Html.HiddenFor(x => x.To)
            @Html.HiddenFor(x => x.From)
            @Html.HiddenFor(x => x.CanBookInstantly)
            @Html.HiddenFor(x => x.Date)
            @Html.HiddenFor(x => x.FlightNumber)
            @Html.HiddenFor(x => x.LoadLimits)
            @Html.HiddenFor(x => x.CanSeeProfilePicture)
            @Html.HiddenFor(x => x.LoadType)
            @Html.HiddenFor(x => x.Comment)
            @Html.HiddenFor(x => x.Price)
            @Html.HiddenFor(x => x.IsRecommendedPriceOk)

        </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function SetApporavl(val) {
            $('#IsRecommendedPriceOk').val(val);
            $('#Price').val(15);
            if (val) {
                $('form').attr('action', 'ProfilePictureChoice');
            }
            $('form').submit();

        }
    </script>
}
