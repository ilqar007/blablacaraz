@model BlaBlaCarAz.BLL.DomainModel.Entities.Ride
@using BlaBlaCarAz.Localization
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResource> _localizer
@{
    ViewData["Title"] = _localizer[nameof(SharedResource.ProfilePictureChoiceTitle)];
}

<h1 class="text-center mt-4">@_localizer[nameof(SharedResource.ProfilePictureChoiceHeader)]</h1>



<form asp-action="Comment">
    <div class="row mb-4"></div>
    <div class="form-control col-6 offset-3">
        <a onclick="SetApporavl(true)" href="#" class="">@_localizer[nameof(SharedResource.YesSure)]</a>
    </div>
    <hr class="col-6 offset-3" />
    <div class="form-control col-6 offset-3">
        <a onclick="SetApporavl(false)" href="#">@_localizer[nameof(SharedResource.NoThanks)]</a>
    </div>


    @Html.HiddenFor(x => x.To)
    @Html.HiddenFor(x => x.From)
    @Html.HiddenFor(x => x.CanBookInstantly)
    @Html.HiddenFor(x => x.DateString)
    @Html.HiddenFor(x => x.TimeString)
    @Html.HiddenFor(x => x.FlightNumber)
    @Html.HiddenFor(x => x.LoadLimits)
    @Html.HiddenFor(x => x.Price)
    @Html.HiddenFor(x => x.LoadType)
    @Html.HiddenFor(x => x.Comment)
    @Html.HiddenFor(x => x.CanSeeProfilePicture)
    @Html.HiddenFor(x => x.IsRecommendedPriceOk)
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function SetApporavl(val) {
            $('#CanSeeProfilePicture').val(val);
            if (val) {
                $('form').attr('action', 'ProfilePicture');
            }
            $('form').submit();

        }
    </script>
}
