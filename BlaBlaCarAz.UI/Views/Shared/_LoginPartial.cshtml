@using Microsoft.AspNetCore.Identity
@using BlaBlaCarAz.BLL.DomainModel.Entities
@using BlaBlaCarAz.BLL.ServiceLayer.Services.Interfaces;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject IService<Message> _messageService
@inject IService<Book> _bookService

@using BlaBlaCarAz.Localization
@using BlaBlaCarAz.Localization.Resources

@inject LocService SharedLocalizer

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><span><i class="fa fa-search"></i></span>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.FindRide))</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Ride" asp-action="Departure"> <span><i class="fa fa-plus-circle"></i></span>@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.OfferRide))</a>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {
        long userId = long.Parse(UserManager.GetUserId(User));
        var unreadMessages = await _messageService.GetAllAsync(x => x.ToUserId == userId && !x.IsSeen);
        var unconfirmedBooks = await _bookService.GetAllAsync(x => x.AppUserId == userId && !x.IsConfirmed);
        @Html.Hidden("isLoggedIn", 1);
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle nav-user arrow-none mr-0" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span>
                    <span class="account-user-name">@UserManager.GetUserName(User)</span>
                </span>
                <span class="account-user-avatar">
                    <img src="@Url.Action("GetImage","Profile")" alt="user-image" class="rounded-circle" width="46" height="46" />
                </span>
                <span id="notificationsCountTitle">
                    @if (unreadMessages.Count > 0 || unconfirmedBooks.Count > 0)
                    {
                        <span class="text-right"><i class="fa fa-bell"></i>@(unreadMessages.Count+ unconfirmedBooks.Count)</span>
                    }
                </span>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
                <a class="nav-link text-dark" asp-controller="Ride" asp-action="Index" title="Books">Your rides</a>
                <a class="nav-link text-dark" asp-controller="Book" asp-action="Index" title="Books">Payments</a>
                <a class="nav-link text-dark" asp-controller="Ride" asp-action="BookConfirmations" title="Books">Book requests <span id="unconfirmedBooksCount"> @Html.Raw(unconfirmedBooks.Count > 0 ? ("<span class=\"text-right\"><i class=\"fa fa-bell\"></i>" + unconfirmedBooks.Count + "</span>") : "")</span></a>
                <a class="nav-link text-dark" asp-controller="Message" asp-action="Index" title="Books">Messages <span id="unreadMessagesCountMessage"> @Html.Raw(unreadMessages.Count > 0 ? ("<span class=\"text-right\"><i class=\"fa fa-bell\"></i>" + unreadMessages.Count + "</span>") : "")</span> </a>
            </div>
        </li>
    }
    else
    {
        @Html.Hidden("isLoggedIn", 0);
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Register))</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">@SharedLocalizer.GetLocalizedHtmlString(nameof(SharedResource.Login))</a>
        </li>
    }
</ul>
