@using Microsoft.AspNetCore.Identity
@using BlaBlaCarAz.BLL.DomainModel.Entities


@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><span><i class="fa fa-search"></i></span>Find a ride</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Ride" asp-action="Departure"> <span><i class="fa fa-plus-circle"></i></span>Offer a ride</a>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle nav-user arrow-none mr-0" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span>
                    <span class="account-user-name">@UserManager.GetUserName(User)</span>
                </span>
                <span class="account-user-avatar">
                    <img src="@Url.Action("GetImage","Profile")" alt="user-image" class="rounded-circle" width="46" height="46"/>
                </span>
                
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
                <a class="nav-link text-dark" asp-controller="Ride" asp-action="Index" title="Books">Your rides</a>
                <a class="nav-link text-dark" asp-controller="Book" asp-action="Index" title="Books">Payments</a>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
